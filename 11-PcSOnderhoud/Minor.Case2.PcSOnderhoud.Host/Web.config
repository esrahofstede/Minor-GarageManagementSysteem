<?xml version="1.0"?>
<configuration>
  <appSettings>
    <add key="aspnet:UseTaskFriendlySynchronizationContext" value="true" />
  </appSettings>
  <configSections>
    <sectionGroup name="serviceBus">
      <section name="serviceLocators"
               type="Minor.ServiceBus.Agent.Implementation.ServiceLocatorConfigSection,
                     Minor.ServiceBus.Agent.Implementation" />
    </sectionGroup>
  </configSections>
  <system.web>
    <compilation debug="true" targetFramework="4.5.2" />
    <httpRuntime targetFramework="4.5.2"/>
  </system.web>
  <system.serviceModel>
    <behaviors>
      <serviceBehaviors>
        <behavior>
          <serviceMetadata httpGetEnabled="true" httpsGetEnabled="true"/>
          <serviceDebug includeExceptionDetailInFaults="false"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>
    <serviceHostingEnvironment aspNetCompatibilityEnabled="true" multipleSiteBindingsEnabled="true" />
  </system.serviceModel>
  <system.webServer>
    <modules runAllManagedModulesForAllRequests="true"/>
    <directoryBrowse enabled="true"/>
  </system.webServer>
  <serviceBus>
    <serviceLocators active="webServiceLocator" profile="Development">
      <fileServiceLocator filePath="../../LocationData.xml" />
      <webServiceLocator address="http://localhost:37428/PfSLocatorService.svc"
                         binding="basicHttpBinding" />
    </serviceLocators>
  </serviceBus>
</configuration>
