@model Minor.Case2.FEGMS.Client.ViewModel.KlaarmeldenVM

@{
    ViewBag.Title = "Klaarmelden";
}

<h2>Klaarmelden</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Kenteken, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Kenteken, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Kenteken, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Klaarmelden" class="btn btn-default" />
            </div>
        </div>
    </div>
}
@if (!string.IsNullOrEmpty(Model?.Message))
{
    <h2 style="text-align:center;">@Model.Message</h2>
}

@if (Model?.Voertuig != null)
{

    if (Model != null)
    {
        if (Model.Steekproef)
        {
            <h1 style="color: red; text-align:center;">Er is een steekproef voor deze auto!</h1>
        }
        else
        {
            <h1 style="color: green; text-align:center;">Er is geen steekproef voor deze auto!</h1>
        }
    }

    <div>
        <hr />
        <h4>Gegevens van de auto</h4>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Voertuig.Kenteken)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Voertuig.Kenteken)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Voertuig.Merk)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Voertuig.Merk)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Voertuig.Type)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Voertuig.Type)
            </dd>

        </dl>
    </div>
}